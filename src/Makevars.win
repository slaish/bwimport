# Include headers
PKG_CPPFLAGS += -I. $(shell Rscript -e "cat(Rcpp:::CxxFlags())") \
                   $(shell Rscript -e "cat(curl::curl_config()[['includes']])")

# Link against curl and zlib provided by curl package
PKG_LIBS += $(shell Rscript -e "cat(curl::curl_config()[['libs']])") \
            $(shell Rscript -e "cat(Rcpp:::LdFlags())")

